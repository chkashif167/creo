<config>
    <modules>
        <Youama_Ajaxlogin>
            <version>2.0.1</version>
        </Youama_Ajaxlogin>
    </modules>
    <global>
        <models>
            <youama_ajaxlogin>
                <class>Youama_Ajaxlogin_Model</class>
            </youama_ajaxlogin>
        </models>
        <blocks>
            <youama_ajaxlogin>
                <class>Youama_Ajaxlogin_Block</class>
            </youama_ajaxlogin>
        </blocks>
    </global>
    <frontend>
        <routers>
            <youama_ajaxlogin>
                <use>standard</use>
                <args>
                    <module>Youama_Ajaxlogin</module>
                    <frontName>ajaxlogin</frontName>
                </args>
            </youama_ajaxlogin>
            <customer>
                <args>
                    <modules>
                        <youama_ajaxlogin before="Mage_Customer">Youama_Ajaxlogin</youama_ajaxlogin>
                    </modules>
                </args>
            </customer>
        </routers>
        <layout>
            <updates>
                <youama_ajaxlogin>
                    <file>youama_ajaxlogin.xml</file>
                </youama_ajaxlogin>
            </updates>
        </layout>
        <translate>
            <modules>
                <youama_ajaxlogin>
                    <files>
                        <default>Youama_Ajaxlogin.csv</default>
                    </files>
                </youama_ajaxlogin>
            </modules>
        </translate>
    </frontend>
    
    <default>
        <youamaajaxlogin>
            <settings>
                <power>1</power>
                <jquery>0</jquery>
                <jqueryui>1</jqueryui>
                <redirection>0</redirection>
            </settings>
        </youamaajaxlogin>
    </default>
</config>