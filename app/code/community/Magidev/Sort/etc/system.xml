                            <label>Merchandising Sort Direction</label>
                            <comment>which of sort direction is used on frontend?</comment>
							<source_model>magidev_sort/system_config_source_direction</source_model>
                            <frontend_type>select</frontend_type>
                            <sort_order>402</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </merchandising_sort_direction>
