        <catalog translate="label" module="magidev_sort">
            <groups>
                <frontend>
                    <fields>
                        <merchandising_column_count translate="label">
                            <label>Merchandising Column Count</label>
                            <comment></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>400</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </merchandising_column_count>
