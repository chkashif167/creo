<?xml version="1.0"?>
<config>
    <tabs>
        <sellers translate="label" module="sellers">
            <label>Extensions</label>
            <sort_order>1</sort_order>
        </sellers>
    </tabs>
     
    <sections>
        <sellers_options translate="label" module="sellers">
            <label>Products</label>
            <tab>sellers</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
				<newcollection translate="label">
                    <label>New Collection</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                    <fields>
                        <month>
                            <label>Month(s)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>sellers/options</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>specify month</comment>
						</month>
                    </fields>
                </newcollection>
				<trending translate="label">
                    <label>Trending Products</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                    <fields>
                        <clothing>
                            <label>Clothing</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>configurable product ids, seperated by comma i.e 1,2,3,4.</comment>                        </clothing>
                        <accessories>
                            <label>Accessories</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>configurable product ids, seperated by comma i.e 1,2,3,4.</comment>                        </accessories>
                        <caps>
                            <label>Caps</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>configurable product ids, seperated by comma i.e 1,2,3,4.</comment>                        </caps>
                    </fields>
                </trending>                
            </groups>                
        </sellers_options>
    </sections>
</config>