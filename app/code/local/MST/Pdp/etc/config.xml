								<sort_order>30</sort_order>
								<action>pdpadmin/adminhtml_pdp/image</action>
							</manageartworks>
						</children>
                    </images>
					<font module="pdp">
                        <title>Fonts Library</title>
                        <sort_order>35</sort_order>
                        <action>pdpadmin/adminhtml_pdp/font</action>
                    </font>
					<color module="pdp">
                        <title>Colors Library</title>
                        <sort_order>36</sort_order>
                        <action>pdpadmin/adminhtml_color/index</action>
                    </color>
					<text module="pdp">
