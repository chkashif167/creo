<?xml version="1.0"?>
<config>
    <modules>
        <MST_Pdp>
            <version>3.0.2</version>
        </MST_Pdp>
    </modules>
    <frontend>
        <routers>
            <pdp>
                <use>standard</use>
                <args>
                    <module>MST_Pdp</module>
                    <frontName>pdp</frontName>
                </args>
            </pdp>
            <checkout>
                <use>standard</use>
                <args>
                    <modules>
                        <MST_Pdp before="Mage_Checkout">MST_Pdp_Checkout</MST_Pdp>
                    </modules>
                </args>
            </checkout>
        </routers>
        <layout>
            <updates>
                <pdp>
                    <file>pdp.xml</file>
                </pdp>
            </updates>
        </layout>
        <translate>
            <modules>
                <pdp>
                    <files>
                        <default>MST_Pdp.csv</default>
                    </files>
                </pdp>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <pdpadmin>
                <use>admin</use>
                <args>
                    <module>MST_Pdp</module>
                    <frontName>pdpadmin</frontName>
                </args>
            </pdpadmin>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <pdp module="pdp">
                <title>Products Designer</title>
                <sort_order>31</sort_order>
                <children>
					<images module="pdp">
                        <title>Cliparts Library</title>
                        <sort_order>30</sort_order>
                      
						<children>
							<add_artworks_cate module="pdp">
