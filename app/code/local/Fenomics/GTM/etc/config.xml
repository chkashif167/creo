<config>
    <modules>
        <Fenomics_GTM>
            <version>1.0.0</version>
        </Fenomics_GTM>
    </modules>
    <global>
        <blocks>
            <fenomics_gtm>
                <class>Fenomics_GTM_Block</class>
            </fenomics_gtm>
        </blocks>
        <helpers>
            <fenomics_gtm>
                <class>Fenomics_GTM_Helper</class>
            </fenomics_gtm>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <gtm>
                    <file>fenomics/gtm.xml</file>
                </gtm>
            </updates>
        </layout>
    </frontend>
    <default>
        <fenomics>
            <customization>
                <loadgtm>0</loadgtm>
            </customization>
        </fenomics>
    </default>
</config>

