<?xml version="1.0"?>
<config>
    <tabs>
        <bubble translate="label">
            <label>Bubble Extensions</label>
            <sort_order>1100</sort_order>
        </bubble>
    </tabs>
    <sections>
        <bubble_aop translate="label" module="bubble_aop">
            <label>Attribute Option Pro</label>
            <tab>bubble</tab>
            <sort_order>20</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label comment">
                    <label>General Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enable_additional_image translate="label comment">
                            <label>Enable Additional Image</label>
                            <comment>Allows you to add a second image to product attribute option.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable_additional_image>
                        <hide_stores translate="label comment">
                            <label>Hide Stores</label>
                            <comment>Allows you to hide specified stores columns.</comment>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/system_config_source_store</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </hide_stores>
                    </fields>
                </general>
            </groups>
        </bubble_aop>
    </sections>
</config>