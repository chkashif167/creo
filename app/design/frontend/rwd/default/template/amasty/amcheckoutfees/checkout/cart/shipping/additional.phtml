                                <?php if ($options && is_array($options)) { ?>
                                    <?php echo Mage::helper('amcheckoutfees')->renderFeeOptions($fee, $options); ?>
                                <?php } ?>
                            </li>
                        <?php } ?>
                    </ul>
                    <br/>
                    <?php if (Mage::app()->getRequest()->getModuleName() == 'checkout' && Mage::app()->getRequest()->getControllerName() == 'cart') { ?>
