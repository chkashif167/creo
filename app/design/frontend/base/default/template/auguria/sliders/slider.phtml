<?php
		if (Mage::getStoreConfig('auguria_sliders/general/preload')=='true'):
?>
			preload: true,
			preloadImage: '<?php echo $this->getSkinUrl('images/auguria/sliders/loading.gif'); ?>',
<?php
		endif;
