<script type="text/javascript">
function loadIframe(iframeName) {
	var ship_val = jQuery('#shipment').val();
	var tracking_number = jQuery('#tracking_number').val();
	jQuery('#iframdiv').show();
	if(ship_val=='speedex'){
		var url = 'https://ws01.ffdx.net/v4/login.aspx?stid=postaplus&css=postaplus';
	}else{
		var url = 'https://www.fedex.com/apps/fedextrack/?action=track&trackingnumber='+tracking_number;
	}
    var $iframe = jQuery('#' + iframeName);
    if ( $iframe.length ) {
        $iframe.attr('src',url);   
        return false;
    }
    return true;
}
</script>