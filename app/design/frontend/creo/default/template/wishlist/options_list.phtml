 <div class="options-area">
<?php $options = $this->getOptionList(); ?>
<?php if ($options): ?>
	<?php 
		foreach ($options as $option){    
			if($option['label'] == "Color")
			{  
				$color = $option['value'];		
			}else  if($option['label'] == "Size"){ 
				$size = $option['value'];
			}
			?>
    <?php }?>

<?php
$item = $this->getItem();
$product = $item->getProduct();
// Collect options applicable to the configurable product
$productAttributeOptions = $product->getTypeInstance(true)->getConfigurableAttributesAsArray($product);
$attributeOptions = array();
foreach ($productAttributeOptions as $productAttribute) {
    foreach ($productAttribute['values'] as $attribute) {
        $attributeOptions[$productAttribute['label']][$attribute['value_index']] = $attribute['store_label'];
    }
}
?>
<div class="column color-area">
    <h4>Color:</h4>
    <ul>
<?php
foreach( $attributeOptions['Color'] as $ao ){
	if(strtolower($ao) == strtolower($color) ){
		$txt [] = '<li class="active '.strtolower($ao).'"><img width="21" height="21" alt="'.$ao.'" src="'.Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA).'/catalog/swatches/1/21x21/media/'.$ao.'.png" style="border:1px solid black; transform:skew(-15deg)"></li>';
		}else{
	$txt [] = '<li class="'.str_replace(" ","_",strtolower($ao)).'"><img width="21" height="21" alt="'.$ao.'" src="'.Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA).'/catalog/swatches/1/21x21/media/'.$ao.'.png"></li>';
		}
		
}
echo implode(' ',$txt);
?>
	</ul>
</div>
<div class="column size-area">
    <h4>Size:</h4>
    <ul>
<?php
foreach( $attributeOptions['Size'] as $ao ){
	if(strtolower($ao) == strtolower($size) ){
		$txt2 [] = '<li class="active"><a href="#" >'.$ao.'</a></li>';
		}else{
	$txt2 [] = '<li><a href="#" >'.$ao.'</a></li>';
		}
		
}
echo implode(' ',$txt2);
?>
	</ul>
</div>

