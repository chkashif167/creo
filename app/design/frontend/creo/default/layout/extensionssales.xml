<?xml version="1.0"?>
<layout version="0.1.0">
    <sales_index_bestseller>
	<!-- set title -->
	<reference name="head">
		<action method="setTitle">
			<title>Best Seller</title>
		</action>
	</reference>
	<!-- Switch root template to 1 column -->
	 <reference name="root">
		<action method="setTemplate"><template>page/1column.phtml</template></action>
	</reference>
        <reference name="content">
            <block type="sales/bestseller" name="sales" as="sales" template="extensions/sales/bestseller.phtml" />
        </reference>
    </sales_index_bestseller>
</layout>
